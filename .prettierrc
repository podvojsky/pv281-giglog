{
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 4,
    "trailingComma": "all",
    "endOfLine": "lf",
    "overrides": [
        {
            "files": "**/*.html",
            "options": {
                "parser": "jinja-template"
            }
        }
    ],
    "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-jinja-template"]
}
